<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="83dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:clipToPadding="false"
                app:cardBackgroundColor="@color/design_default_color_primary_dark"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="169dp">

                <TextView
                    android:id="@+id/textOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="TEST test"
                    android:textColor="@color/white"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/textTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp"
                    android:text="TEST test"
                    android:textColor="@color/white"
                    android:textSize="15dp"></TextView>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="-60dp"
                    android:src="@drawable/ic_launcher_foreground"></ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv2"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                card_view:cardBackgroundColor="@color/design_default_color_secondary"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="2dp"
                card_view:layout_constraintTop_toBottomOf="@+id/cv1"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="169dp">

                <TextView
                    android:id="@+id/textOne1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:text="TEST test"
                    android:textColor="@color/white"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/textTwo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="10dp"
                    android:text="TEST test"
                    android:textColor="@color/white"
                    android:textSize="15dp"></TextView>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_launcher_foreground"></ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                card_view:cardBackgroundColor="@color/design_default_color_primary"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="2dp"
                card_view:layout_constraintTop_toBottomOf="@id/cv2"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="169dp">

                <TextView
                    android:id="@+id/textOne3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="TEST test"
                    android:textColor="@color/white"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/textTwo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp"
                    android:text="TEST test"
                    android:textColor="@color/white"
                    android:textSize="15dp"></TextView>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_launcher_foreground"></ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv4"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                card_view:cardBackgroundColor="@color/design_default_color_secondary_variant"
                card_view:cardCornerRadius="20dp"
                card_view:cardElevation="2dp"
                card_view:layout_constraintTop_toBottomOf="@+id/cv3"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="169dp">

                <TextView
                    android:id="@+id/textOne4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:text="TEST test"
                    android:textColor="@color/white"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/textTwo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="10dp"
                    android:text="TEST test"
                    android:textColor="@color/white"
                    android:textSize="15dp"></TextView>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_launcher_foreground"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>